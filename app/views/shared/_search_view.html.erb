        </ul>
      </div>
    </nav>
    <div id="map">
      <script language="JavaScript">initMap(1);</script>
    </div><!--#map-->
    <% Array(sensations).each do |sensation| %>
      <script language="JavaScript">
        searchMarker(<%= sensation.lat %>, <%= sensation.lon %>, <%= sensation.emotion %>);
        console.log("id="+<%= sensation.id %>+", emotions="+<%= sensation.emotion %>+", コメント="+"<%= sensation.comment %>");
      </script>
    <% end %>
    <div id="bottom_bar" class="deep-orange lighten-4">
      <a id="walk_button" class="btn-floating right btn-small waves-effect waves-light red" ><i class="material-icons" onclick="searchMarker()">room</i></a>
      <a id="walk_button" class="btn-floating right btn-small waves-effect waves-light red" ><i class="material-icons" onclick="way()">directions_walk</i></a>
    </div>
  </body>
</html>